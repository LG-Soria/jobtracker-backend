// Specification: Prisma schema for job applications and status enum.
// Provides JobStatus enum and JobApplication model persisted in PostgreSQL.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum JobStatus {
  ENVIADA
  EN_PROCESO
  ENTREVISTA
  RECHAZADA
  SIN_RESPUESTA
}

enum Role {
  USER
  DEMO
}

enum SalaryCurrency {
  ARS
  USD
  EUR
}

enum SalaryPeriod {
  Mensual
  Anual
  Hora
}

enum SalaryType {
  Bruto
  Neto
}

enum JobApplicationHistoryType {
  CREATED
  STATUS_CHANGED
}


model JobApplication {
  id              String    @id @default(uuid())
  company         String
  position        String
  source          String
  applicationDate DateTime
  status          JobStatus
  notes           String?
  jobUrl          String?
  salaryMin       Int?
  salaryMax       Int?
  salaryCurrency  SalaryCurrency?
  salaryPeriod    SalaryPeriod?
  salaryType      SalaryType?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  history         JobApplicationHistory[]

  @@index([status])
  @@index([applicationDate])
  @@index([userId])
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  applications JobApplication[]
  historyActions JobApplicationHistory[] @relation("ApplicationHistoryActor")
}

model JobApplicationHistory {
  id               String                     @id @default(uuid())
  jobApplicationId String
  jobApplication   JobApplication             @relation(fields: [jobApplicationId], references: [id], onDelete: Cascade)
  type             JobApplicationHistoryType
  meta             Json
  createdAt        DateTime                   @default(now())
  actorUserId      String?
  actorUser        User?                      @relation("ApplicationHistoryActor", fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([jobApplicationId])
  @@index([createdAt])
}
